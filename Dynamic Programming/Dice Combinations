#include <bits/stdc++.h>
using namespace std;
    vector<int>dp(1e6,0);
int mod=1e9+7;
int main() {
    int n;
    cin>>n;
    dp[0]=1;
    // dp[1]=1;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=6;j++){
            if(i-j>=0){
                dp[i]=(dp[i]+dp[i-j])%mod;
            }
        }
    }
        cout<<dp[n]<<endl;
    return 0;
}
