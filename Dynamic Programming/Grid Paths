#include <bits/stdc++.h>
using namespace std;
const int mod = 1e9+7;
typedef long long ll;

void solution() {
   ll n;
    cin>>n;
    vector<vector<char>>mat(n,vector<char>(n));
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++)cin>>mat[i][j];
    }
    if (mat[0][0] == '*' || mat[n-1][n-1] == '*') {
        cout << 0 << "\n";
        return;
    }

    vector<vector<ll>>dp(n,vector<ll>(n,0));
    dp[n-1][n-1]=1;
    for(int i=n-1;i>=0;i--){
        for(int j=n-1;j>=0;j-- ){
            // if(i==n-1)
            if(mat[i][j]=='*')continue;
            else{
               dp[i][j]=(dp[i][j] + (i+1<n?dp[i+1][j]:0)%mod+ (j+1<n?dp[i][j+1]:0)%mod)%mod;
            }
        }
    }
    cout<<dp[0][0]<<endl;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int t=1;
    // cin>>t;
    while(t--){
        solution();
    }
    
    return 0;
} 
